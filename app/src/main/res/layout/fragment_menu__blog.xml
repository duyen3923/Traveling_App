<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.Menu_Blog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_blog_main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="BLOG"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"/>

        <ImageView
            android:id="@+id/create_blog_main"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_12"
            android:layout_marginLeft="-40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:weightSum="2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Dành cho bạn"
            android:textAlignment="center"
            android:textColor="#0C9FEE"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_no_color"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Đang theo dõi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postRecyclerView"
        android:horizontalSpacing="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:verticalSpacing="5dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="7.5dp"
        android:paddingRight="7.5dp"
        android:paddingBottom="15dp"
        android:clipToPadding="false"
        app:spanCount="2"
        tools:listitem="@layout/post_item"/>



