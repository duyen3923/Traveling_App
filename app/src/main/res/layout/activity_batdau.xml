<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartActivity">

    <ImageView
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:src="@drawable/bgrtravel1"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:src="@drawable/logo8"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:paddingStart="30dp"
        android:layout_marginTop="-170dp"
        android:paddingEnd="30dp"
        android:text="Khám phá thế giới với ứng dụng du lịch hàng đầu!"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Bắt đầu cuộc phiêu lưu mới ngay hôm nay."
        android:textSize="14dp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bắt đầu"
        android:textAllCaps="false"
        android:layout_below="@id/tv2"
        android:layout_marginTop="20dp"
        android:background="@drawable/stroke_button1"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />



<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="230dp"-->
<!--        android:layout_marginTop="70dp"-->
<!--        android:fontFamily="@font/salsa"-->
<!--        android:text="TRAVELING"-->
<!--        android:textColor="@color/black"-->
<!--        android:textSize="25dp"-->
<!--        android:textStyle="bold" />-->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:padding="10dp"
        />

</RelativeLayout>