<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_margin="6dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/image_hot"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:src="@drawable/main_anh5"></ImageView>

            <ImageView
                android:id="@+id/hot_tour_love"
                android:tag="hot_tour_love"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:textSize="11sp"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:src="@drawable/main_heart_regular_white"
                android:layout_gravity="top|right"
                ></ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_hot"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tour du lịch tham quan Đà..."></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sale_hot"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.500.000đ"
                android:textColor="@color/primaryColor"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/price_hot"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.500.000đ"
                    android:textColor="#B4B4B4"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-8dp"
                    android:background="#B4B4B4"></LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/percent_hot"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(40%)"
                android:textColor="#0051B1"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/main_star_solid"></ImageView>

            <TextView
                android:id="@+id/rate_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textSize="11sp"
                android:textColor="#FFC107"></TextView>

            <TextView
                android:id="@+id/review_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#B4B4B4"
                android:layout_marginLeft="5dp"
                android:text="821 đánh giá"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>