<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NotificationActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noti_rcv"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/footer_border"
        android:layout_alignParentBottom="true"
        android:elevation="100dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_height="30dp"
            android:src="@drawable/main_home_solid_dis"></ImageButton>

        <ImageView
            android:id="@+id/btnBlog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:src="@drawable/main_news_regular"></ImageView>

        <ImageButton
            android:id="@+id/btnNotification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:src="@drawable/main_bell_regular_active"></ImageButton>

        <ImageButton
            android:id="@+id/btnLove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:src="@drawable/main_heart_regular_footer"></ImageButton>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:src="@drawable/main_menu_regular"></ImageButton>

    </LinearLayout>

</RelativeLayout>