<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:id="@+id/container"
    tools:context=".fragment.ReviewFragment">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/stars">
        <LinearLayout
            android:layout_marginTop="-15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/sao5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_border"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:onClick="onReviewClick"
                android:tag="5"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_star_solid"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/numCom5"
                        android:layout_width="28dp"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_comment_regular"></ImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sao4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_border"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:onClick="onReviewClick"
                android:tag="4"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_star_solid"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/numCom4"
                        android:layout_width="28dp"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_comment_regular"></ImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_border"
                android:orientation="vertical"
                android:onClick="onReviewClick"
                android:tag="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_star_solid"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/numCom3"
                        android:layout_width="28dp"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_comment_regular"></ImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_border"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:onClick="onReviewClick"
                android:tag="2"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_star_solid"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/numCom2"
                        android:layout_width="28dp"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_comment_regular"></ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/review_border"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:onClick="onReviewClick"
                android:tag="1"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_star_solid"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/numCom1"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textSize="13sp"></TextView>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/main_comment_regular"></ImageView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stars"
        android:scrollbars="none">

        <LinearLayout
            android:layout_marginTop="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#F4F4F4"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/image_user_review"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/main_avatar"></ImageView>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:onClick="onStarClick"
                            android:tag="1"
                            android:src="@drawable/main_star_disable"></ImageView>
                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:onClick="onStarClick"
                            android:tag="2"
                            android:src="@drawable/main_star_disable"></ImageView>
                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:onClick="onStarClick"
                            android:tag="3"
                            android:src="@drawable/main_star_disable"></ImageView>
                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:onClick="onStarClick"
                            android:tag="4"
                            android:src="@drawable/main_star_disable"></ImageView>
                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:onClick="onStarClick"
                            android:tag="5"
                            android:src="@drawable/main_star_disable"></ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/inputBl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Nhập đánh giá của bạn"
                            android:paddingRight="30dp"
                            android:textSize="13sp"
                            ></EditText>

                        <LinearLayout
                            android:layout_marginLeft="-45dp"
                            android:layout_width="40dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/btn_up_bl"
                                android:layout_marginRight="5dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/main_link_icon"/>

                            <ImageView
                                android:id="@+id/btn_bl1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/main_icon_send"></ImageView>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/bl_anh1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/main_anh2"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/bl_anh2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/main_anh2"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/bl_anh3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/main_anh2"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/bl_anh4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/main_anh2"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/review_rcv"
                android:scrollbars="none"
                ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>