<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.AdminActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách các tour đã tạo"
        android:textAlignment="center"
        android:textColor="@color/primaryColor"
        android:textSize="22sp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/admin_searchEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/admin_border_input"
            android:hint="Nhập tên tour cần tìm"
            android:paddingLeft="10dp"></EditText>

        <Button
            android:id="@+id/admin_searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="-100dp"
            android:background="@drawable/admin_border_input"
            android:text="Tìm"
            app:backgroundTint="@color/primaryColor" />
    </LinearLayout>

    <ListView
        android:id="@+id/tour_admin_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:scrollbars="none"></ListView>

</LinearLayout>