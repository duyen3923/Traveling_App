<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ln_nearTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/img_near"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/main_anh3"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_near"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ốc đảo xanh ngay tại Sài Gòn"
                android:textStyle="bold"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/content_near"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đầm được hình thành do tuyến đê tả ngạn sông Đáy nhằm ngăn lũ lụt từ đó biển Vân Long trở thành 1 vùng trù phú"
                android:textSize="12sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/distance_near"
                    android:backgroundTint="#088CD4"
                    android:textColor="@color/white"
                    android:background="@drawable/button_border_main"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="5 km"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/main_current_location"></TextView>

                <TextView
                    android:gravity="center"
                    android:id="@+id/location_near"
                    android:backgroundTint="#088CD4"
                    android:background="@drawable/button_border_main"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Cần Giờ"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"></TextView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>